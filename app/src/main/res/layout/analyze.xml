<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Data"
            android:layout_width="match_parent"
            android:id="@+id/title"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="50dp"
            android:layout_height="65dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Total Patients"
            android:layout_width="match_parent"
            android:id="@+id/totalPatientsTitle"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_height="40dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:id="@+id/totalPatients"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="45dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gender_layout"
        android:contextClickable="false">

        <TextView
            android:text="Gender Distribution"
            android:layout_width="match_parent"
            android:id="@+id/textView2"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_height="40dp" />

        <TextView
            android:text="Male:    Female:    Unspecified:    "
            android:layout_width="match_parent"
            android:id="@+id/gender"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_height="45dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Avg. Immunization"
            android:layout_width="match_parent"
            android:id="@+id/textView6"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_height="40dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:id="@+id/avgImmuniation"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_height="45dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Avg. Medication"
            android:layout_width="match_parent"
            android:id="@+id/textView9"
            android:textSize="25sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_height="40dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:id="@+id/aveMedication"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_height="45dp" />
    </LinearLayout>

</LinearLayout>